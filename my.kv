#:kivy 2.1.0

#:set global_background_color_one (198/255, 236/255, 189/255, 1)
#:set global_background_color_two (211/255, 182/255, 236/255, 1)
#:set global_background_color_three (6/255, 6/255, 6/255, 1)

WindowManager:
    MainWindow:
        id: menu_screen
    LogInAdmin:
    Zaewindow:
    NewMat:
        label_text: menu_screen.text
        vid_url: menu_screen.vdtext


<MainWindow>:
    name: 'main'
    size: root.width, root.height
    canvas.before:
		Color:
			rgba: global_background_color_one
		Rectangle:
			pos: self.pos
			size: self.size
    
    GridLayout:
        cols:1
        size: 1, 1
        Image:
            source: 'en.png'
            size: self.texture_size
            padding: 0, 15, 0, 10
        Image:
            source: 'fl.png'
            size: self.texture_size
            padding: 0, 10, 0, 20

        Button:
            canvas.before:
                Color:
                    rgba: global_background_color_three
                Line:
                    width: 3
                    rounded_rectangle: (root.width - 200) / 2, self.y+20, 200, 80, 20, 100
                Color:
                    rgba: global_background_color_two
                RoundedRectangle:
                    size: 200, 80
                    pos: (root.width - 200) / 2, self.y+20
                    radius: [20]
            
            size: 200, 80
            padding: 0, 20, 0, 20
            color: global_background_color_three
            background_color: (0,0,0,0)
            text:"ПРИКРЕПИТЬ\nИЗОБРАЖЕНИЕ"
            font_name: "Jost"
            font_size: 20
            halign:'center'
            valign:'center'
            on_release: root.show_load()
        
        Button:
            canvas.before:
                Color:
                    rgba: global_background_color_three
                Line:
                    width: 3
                    rounded_rectangle: (root.width - 180) / 2, self.y + 40, 180, 40, 20, 100
                Color:
                    rgba: global_background_color_two
                RoundedRectangle:
                    size: 180, 40
                    pos: (root.width - 180) / 2, self.y + 40
                    radius: [20]
            size: 180, 40
            padding: 0, 20, 0, 20
            color: global_background_color_three
            background_color: (0,0,0,0)
            text:"Войти как админ"
            font_name: "Jost"
            font_size: 14
            on_release: root.on_click2()
        
        Image:
            source: 'big.png'
            size: self.texture_size
            padding: 0, 10, 0, 15
    

<LogInAdmin>:

    name: 'login'
    canvas.before:
		Color:
			rgba: global_background_color_one
		Rectangle:
			pos: self.pos
			size: self.size
    Widget:
        Image:
            source: 'en.png'
            size: self.texture_size
            pos: root.width / 2 - self.width / 2, root.height * 0.88 - self.height / 2
        GridLayout:
            cols: 1
            size: root.width * 0.8, root.height / 2
            pos: root.width / 2 - self.width / 2, root.height / 2 - self.height / 2 + 10

            
            TextInput:
                id: log
                canvas.before:
                    Color:
                        rgba: global_background_color_three
                    Line:
                        width: 2
                        rounded_rectangle: self.x, self.y, self.width, self.height, 20, 100
                cursor_color: [0,0,0,1]
                multiline: False
                foreground_color: global_background_color_three
                background_color: (0,0,0,0)
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            Label:
                color: global_background_color_three
                text: "Логин"
                font_name: "Jost"
                font_size: 20
                padding: 0,20,0,50
            TextInput:
                id: pass
                canvas.before:
                    Color:
                        rgba: global_background_color_three
                    Line:
                        width: 2
                        rounded_rectangle: self.x, self.y, self.width, self.height, 20, 100
                cursor_color: [0,0,0,1]
                multiline: False
                foreground_color: global_background_color_three
                background_color: (0,0,0,0)
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            Label:
                color: global_background_color_three
                text: "Пароль"
                font_name: "Jost"
                font_size: 20
                padding: 0,20,0,50
            Button:
                width: root.width*0.7
                padding: 0, 60, 0, 0

                canvas.before:
                    Color:
                        rgba: global_background_color_three
                    Line:
                        width: 3
                        rounded_rectangle: root.width / 2 - root.width*0.7 / 2, self.y-32, root.width*0.7, self.height, 20, 100
                    Color:
                        rgba: global_background_color_two
                    RoundedRectangle:
                        size: root.width*0.7, self.height
                        pos: root.width / 2 - root.width*0.7 / 2, self.y-32
                        radius: [20]
                
                color: global_background_color_three
                background_color: (0,0,0,0)
                text:"ВОЙТИ"
                font_name: "Jost"
                font_size: 20
                on_release: root.clc ()
        Image:
            source: 'fl.png'
            size: self.texture_size
            pos: root.width / 2 - self.width / 2, root.height * 0.10 - self.height / 2


