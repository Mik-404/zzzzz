<NewMat>:
    name: "mat"
    canvas.before:
		Color:
			rgba: global_background_color_one
		Rectangle:
			pos: self.pos
			size: self.size
    Widget:
        Image:
            source: 'en.png'
            size: self.texture_size
            pos: root.width / 2 - self.width / 2, root.height * 0.88 - self.height / 2
        GridLayout:
            cols: 1
            size: root.width * 0.8, root.height / 2
            pos: root.width / 2 - self.width / 2, root.height / 2 - self.height / 2 + 10
            ScrollView:
                size: root.width, root.height * 0.9
                do_scroll_x: False
                do_scroll_y: True
                padding: 0
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text: root.label_text
                    font_name: "Jost"
                    font_size: 15
                    color: global_background_color_three
                
            GridLayout:
                cols: 2
                width: root.width
                padding: 0, 30, 0, 0

                Button:
                    padding: 0
                    width: root.width * 0.45
                    canvas.before:
                        Color:
                            rgba: global_background_color_three
                        Line:
                            width: 3
                            rounded_rectangle: (root.width * 0.25 - root.width*0.45 / 2) * 0.8 + root.width * 0.1, self.y, root.width*0.45* 0.8, self.height, 20, 100
                        Color:
                            rgba: global_background_color_two
                        RoundedRectangle:
                            size: root.width*0.45* 0.8, self.height
                            pos: (root.width * 0.25 - root.width*0.45 / 2) * 0.8 + root.width * 0.1, self.y
                            radius: [20]
                    
                    color: global_background_color_three
                    background_color: (0,0,0,0)
                    text:"СКОПИРОВАТЬ\nССЫЛКУ"
                    halign:'center'
                    valign:'center'
                    font_name: "Jost"
                    font_size: 18
                    on_release: root.back2()

                Button:
                    padding: 0
                    width: root.width * 0.45
                    canvas.before:
                        Color:
                            rgba: global_background_color_three
                        Line:
                            width: 3
                            rounded_rectangle: (root.width * 0.75 - root.width*0.45 / 2)* 0.8 + root.width * 0.1, self.y, root.width*0.45* 0.8, self.height, 20, 100
                        Color:
                            rgba: global_background_color_two
                        RoundedRectangle:
                            size: root.width*0.45* 0.8, self.height
                            pos: (root.width * 0.75 - root.width*0.45 / 2)* 0.8 + root.width * 0.1, self.y
                            radius: [20]
                    
                    color: global_background_color_three
                    background_color: (0,0,0,0)
                    text:"НАЗАД"
                    font_name: "Jost"
                    font_size: 20
                    on_release: root.back()
            